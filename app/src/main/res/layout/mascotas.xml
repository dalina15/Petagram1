<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMascotas"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvMascota"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
     >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/boxer"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="19dp" />

        <ImageView
            android:id="@+id/imgHuesoDorado"
            android:layout_width="76dp"
            android:layout_height="50dp"
            android:src="@drawable/HuesoDorado"
            tools:layout_editor_absoluteX="335dp"
            tools:layout_editor_absoluteY="414dp" />


        <ImageView
            android:id="@+id/imgHuesoBlanco"
            android:layout_width="49dp"
            android:layout_height="56dp"
            android:src="@drawable/HuesoBlanco"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="407dp" />

        <ImageView
            android:id="@+id/imgHuella"
            android:layout_width="77dp"
            android:layout_height="45dp"
            android:src="@drawable/Huella"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imgEstrella"
            android:layout_width="63dp"
            android:layout_height="52dp"
            android:src="@drawable/Estrella"
            tools:layout_editor_absoluteX="348dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Boxer"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="414dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>